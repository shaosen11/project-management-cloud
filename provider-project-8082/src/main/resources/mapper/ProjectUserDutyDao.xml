<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.lingnan.dao.ProjectUserDutyDao">

    <resultMap type="com.edu.lingnan.entity.ProjectUserDuty" id="ProjectUserDutyMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="dutyName" column="duty_name" jdbcType="VARCHAR"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProjectUserDutyMap">
        select
          id, duty_name, delete_flag
        from project_management_cloud.project_user_duty
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProjectUserDutyMap">
        select
          id, duty_name, delete_flag
        from project_management_cloud.project_user_duty
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProjectUserDutyMap">
        select
          id, duty_name, delete_flag
        from project_management_cloud.project_user_duty
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="dutyName != null and dutyName != ''">
                and duty_name = #{dutyName}
            </if>
            <if test="deleteFlag != null">
                and delete_flag = #{deleteFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into project_management_cloud.project_user_duty(duty_name, delete_flag)
        values (#{dutyName}, #{deleteFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update project_management_cloud.project_user_duty
        <set>
            <if test="dutyName != null and dutyName != ''">
                duty_name = #{dutyName},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from project_management_cloud.project_user_duty where id = #{id}
    </delete>

</mapper>