<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.lingnan.dao.ProjectScheduleDao">

    <resultMap type="com.edu.lingnan.entity.ProjectSchedule" id="ProjectScheduleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="schedule" column="schedule" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProjectScheduleMap">
        select
          id, schedule
        from project_management_cloud.project_schedule
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProjectScheduleMap">
        select
          id, schedule
        from project_management_cloud.project_schedule
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProjectScheduleMap">
        select
          id, schedule
        from project_management_cloud.project_schedule
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="schedule != null and schedule != ''">
                and schedule = #{schedule}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into project_management_cloud.project_schedule(schedule)
        values (#{schedule})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update project_management_cloud.project_schedule
        <set>
            <if test="schedule != null and schedule != ''">
                schedule = #{schedule},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from project_management_cloud.project_schedule where id = #{id}
    </delete>

</mapper>