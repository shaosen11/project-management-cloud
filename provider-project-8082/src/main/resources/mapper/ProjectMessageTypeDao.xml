<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.lingnan.dao.ProjectMessageTypeDao">

    <resultMap type="com.edu.lingnan.entity.ProjectMessageType" id="ProjectMessageTypeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="background" column="background" jdbcType="VARCHAR"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProjectMessageTypeMap">
        select
          id, type, icon, background, delete_flag
        from project_management_cloud.project_message_type
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProjectMessageTypeMap">
        select
          id, type, icon, background, delete_flag
        from project_management_cloud.project_message_type
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProjectMessageTypeMap">
        select
          id, type, icon, background, delete_flag
        from project_management_cloud.project_message_type
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="background != null and background != ''">
                and background = #{background}
            </if>
            <if test="deleteFlag != null">
                and delete_flag = #{deleteFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into project_management_cloud.project_message_type(type, icon, background, delete_flag)
        values (#{type}, #{icon}, #{background}, #{deleteFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update project_management_cloud.project_message_type
        <set>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="background != null and background != ''">
                background = #{background},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from project_management_cloud.project_message_type where id = #{id}
    </delete>

</mapper>